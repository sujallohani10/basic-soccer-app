<% include ../partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <% if (team) { %>
            <form class="add-team-form" action="" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" name="team_name" id="team_name" value="<%= team.name %>" required>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" name="short_name" id="short_name" value="<%= team.short_name %>" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <select id="country" name="country" class="form-control" required>
                            <option selected><%= team.country %></option>
                            <option>England</option>
                            <option>Spain</option>
                            <option>Italy</option>
                            <option>German</option>
                            <option>France</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary float-right">Update Team</button>
            </form>
        <% } else { %>
        <p class="text-center">Team Not Found. Go <a href="/team/add">here</a> to add teams.</p>
    <% } %>
    </div>
</div>
</body>
</html>