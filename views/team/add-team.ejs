<% include ../partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-team-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="team_name" id="team_name" placeholder="Name" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="short_name" id="short_name" placeholder="Short Name" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <select id="country" name="country" class="form-control" required>
                        <option selected disabled>Choose country</option>
                        <option>England</option>
                        <option>Spain</option>
                        <option>Italy</option>
                        <option>German</option>
                        <option>France</option>
                    </select>
                </div>
                <div class="col-md-12">
                    <label for="team-img"><b>Team Image</b></label><br>
                    <input type="file" name="image" id="team-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Team</button>
        </form>
    </div>
</div>
</body>
</html>